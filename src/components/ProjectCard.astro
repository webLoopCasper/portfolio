---
const { button, image, link } = Astro.props
---


    
    
        <div class="project">
            <div class="projectBg" style=`
            background-image: url(/img/${image});`  >

            </div>
            <div class="content">
                <slot/>
                
                <a href={link}>
                    {button}
                </a>

            </div>
           
            
        </div>
       
    
<style>
    
   
    .project{
        border-radius: 25px;
        overflow: hidden;
        /* height: 500px; */
        
        background-color: white;
        box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.25);
        justify-self: center;

    }

    .projectBg{
        height: 250px;
        /* background-image: url("/img/likespilletx.webp"); */
        background-repeat: no-repeat; 
        background-position: center; 
        background-size: cover;
        
    }
    .content{
        padding: 20px 30px;
        text-align: center;
        
    }
    .content a{
        margin-inline:auto;
        display:block;
        background-color: var(--portYellow);
        width: 80%;
        padding-top: 15px;
        padding-bottom: 15px;
        border: none;
        border-radius:15px;
        font-weight: bold;
        margin-top: 15px;
        box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.25);
    }
    .content a:hover{
        background-color: var(--portYellowHover);
        box-shadow: none;
    }

   